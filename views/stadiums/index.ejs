<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
      <div class="container">
        <h1>Welcome to Football Stadiums</h1>
        <p>Every league stadiums available here</p>
        <p>
          <a class="btn btn-primary btn-lg" href="/stadiums/new">Add New Stadium</a>
        </p>
        <p>
          <form action="/stadiums" method="GET" class="form-inline">
           <div class="form-group"> 
             <input type="text" name="search" placeholder="Stadium Search" class="form-inline">
             <input type="submit" value="Search" class="btn btn-default" >
          </div> 
          </form>
        </p>
      </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
      <div class="col-md-12">
        <% if(noMatch !== null) { %>
          <h3><%= noMatch %></h3>
        <% } %>
      </div>
      <% stadiums.forEach(function(stadium){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
              <img src="<%= stadium.image %>">
              <div class="caption">
                <h4><%= stadium.name %></h4>
              </div>
              <p>
                <a href="/stadiums/<%= stadium._id %>" class="btn btn-primary">More Info</a>
              </p>
            </div>
        </div>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>
