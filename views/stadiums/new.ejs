<% include ../partials/header %>
  <div class="container">
    <div class="row">
      <h1 style="text-align:center">Create a new Stadium</h1>
      <div style="width: 30%; margin: 20px auto;">
        <form action="/stadiums" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="name" placeholder="name">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="image" placeholder="image url">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="description" placeholder="description">
          </div>
          <div class="form-group">
            <input class="form-control" type="number" name="cost" placeholder="cost" step="1" min="0" required>
          </div>
          <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" type="text" name="location" id="location" placeholder="Emirates Stadium, London">
          </div>
          <div class="from-group">
            <button class="btn btn-lg btn-primary">Submit!</button>
          </div>
          <div class="form-group">
            <a href="/stadiums">Go Back</a>
          </div>
        </form>
      </div>
    </div>
  </div>
  <% include ../partials/footer %>
