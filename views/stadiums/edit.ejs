<% include ../partials/header %>
  <div class="container">
    <div class="row">
      <h1 style="text-align:center">Edit <%= stadium.name %> </h1>
      <div style="width: 30%; margin: 20px auto;">
        <form action="/stadiums/<%=stadium._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="stadium[name]" value="<%= stadium.name %>">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="stadium[image]" value="<%= stadium.image %>">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="stadium[description]" value="<%= stadium.description %>">
          </div>
          <div class="form-group">
            <input class="form-control" type="number" name="cost" value="<%= stadium.cost %>" step="1" min="0" required>
          </div>
          <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" type="text" name="location" id="location" value="<%= stadium.location %>">
          </div>
          <div class="from-group">
            <button class="btn btn-lg btn-primary">Submit!</button>
          </div>
          <div class="form-group">
            <a href="/stadiums">Go Back</a>
          </div>
        </form>
      </div>
    </div>
  </div>
  <% include ../partials/footer %>
